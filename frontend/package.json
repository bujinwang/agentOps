{
  "name": "RealEstateCRM",
  "version": "1.0.0",
  "main": "AppEntry.js",
  "scripts": {
    "android": "expo run:android",
    "ios": "expo run:ios",
    "start": "npx expo start",
    "web": "expo start --web",
    "build": "expo build:android",
    "build:ios": "expo build:ios",
    "clean": "rm -rf node_modules && npm install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:component": "jest --testPathPattern=component",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "test:coverage:analysis": "node test-coverage-analysis.js",
    "test:coverage:dashboard": "open coverage-dashboard.html",
    "test:full-suite": "npm run test:coverage && npm run test:coverage:analysis",
    "test:automated": "bash ../../scripts/run-automated-tests.sh",
    "test:automated:unit": "bash ../../scripts/run-automated-tests.sh unit",
    "test:automated:component": "bash ../../scripts/run-automated-tests.sh component",
    "test:automated:integration": "bash ../../scripts/run-automated-tests.sh integration",
    "test:automated:e2e": "bash ../../scripts/run-automated-tests.sh e2e",
    "test:automated:accessibility": "bash ../../scripts/run-automated-tests.sh accessibility",
    "test:automated:performance": "bash ../../scripts/run-automated-tests.sh performance",
    "test:automated:coverage": "bash ../../scripts/run-automated-tests.sh coverage",
    "test:automated:backend": "bash ../../scripts/run-automated-tests.sh backend",
    "test:automated:setup": "bash ../../scripts/run-automated-tests.sh setup",
    "test:scheduler:start": "node ../../scripts/test-scheduler.js start",
    "test:scheduler:stop": "node ../../scripts/test-scheduler.js stop",
    "test:scheduler:status": "node ../../scripts/test-scheduler.js status",
    "test:scheduler:run-daily": "node ../../scripts/test-scheduler.js run daily-full",
    "test:scheduler:run-hourly": "node ../../scripts/test-scheduler.js run hourly-smoke",
    "test:reporting:daily": "node ../../scripts/automated-reporting.js daily",
    "test:reporting:weekly": "node ../../scripts/automated-reporting.js weekly",
    "test:ci": "npm run lint && npm run typecheck && npm run test:coverage",
    "test:pre-commit": "npm run lint && npm run test:unit",
    "test:pre-push": "npm run test:full-suite && npm run test:accessibility"
  },
  "dependencies": {
    "@expo/cli": "^0.18.0",
    "@expo/metro-config": "^0.18.0",
    "@expo/metro-runtime": "~3.1.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native-community/netinfo": "11.1.0",
    "@react-native-picker/picker": "^2.5.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@react-navigation/stack": "^6.3.17",
    "expo": "^50.0.0",
    "expo-font": "~11.10.3",
    "expo-splash-screen": "^0.30.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.0",
    "react-native-calendars": "^1.1302.0",
    "react-native-config": "^1.5.1",
    "react-native-document-picker": "^9.1.1",
    "react-native-elements": "^3.4.3",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-paper": "^5.10.4",
    "react-native-reanimated": "~3.6.0",
    "react-native-safe-area-context": "4.8.0",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-web": "^0.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@testing-library/react-native": "^12.0.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.2.0",
    "@types/react-test-renderer": "^18.2.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
